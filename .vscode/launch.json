    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.main:app",
                "--reload"
            ],
            "jinja": true
        },
        {
            "name": "Python: Debug stock_positions.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/analysis/stock_positions.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/src/analysis",
            "env": {},
            "args": [],
            "envFile": "${workspaceFolder}/.env",
            "django": false
          }
    ]
}